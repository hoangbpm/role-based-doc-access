<html>
<head>
  <meta charset="utf-8" />
  <title>Đăng nhập</title>
  <!-- Tailwind CSS: khuyến khích build cục bộ thay vì CDN cho production -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center">
  <div class="flex flex-col md:flex-row w-full max-w-6xl mx-auto p-6 md:space-x-10 space-y-10 md:space-y-0 items-center justify-center">
    <!-- Cột trái: Logo và mô tả -->
    <div class="md:w-1/2 flex flex-col items-center md:items-start text-center md:text-left">
      <body>  
        <img   
          src="/images/logo.png"   
          alt="HUST Logo"   
          class="w-32"  
        />  
      </body>  
      <p class="text-2xl md:text-3xl font-bold md:max-w-[320px]">
        Nhà phát triền phần mềm
      </p>
    </div>

    <!-- Cột phải: Form đăng nhập -->
    <div class="md:w-1/3 bg-white p-6 rounded-md shadow-md w-full max-w-md">
      <h1 class="text-2xl font-bold mb-6 text-center">Đăng nhập</h1>
      
      <% if (error) { %>
        <p class="text-red-500 mb-4"><%= error %></p>
      <% } %>

      <form method="POST" action="/auth/login" class="space-y-4">
        <div>
          <label class="block font-semibold mb-1">Tên người dùng:</label>
          <input
            type="text"
            name="username"
            class="w-full px-3 py-2 border border-gray-300 rounded-md
                   focus:outline-none focus:ring-2 focus:ring-blue-200"
            placeholder="Nhập tên người dùng"
            required
          />
        </div>
        <div>
          <label class="block font-semibold mb-1">Mật khẩu:</label>
          <input
            type="password"
            name="password"
            class="w-full px-3 py-2 border border-gray-300 rounded-md
                   focus:outline-none focus:ring-2 focus:ring-blue-200"
            placeholder="Nhập mật khẩu"
            required
          />
        </div>
        <button
          type="submit"
          class="w-full bg-blue-600 text-white py-2 rounded-md font-semibold
                 hover:bg-blue-700 transition-colors"
        >
          Đăng nhập
        </button>
      </form>
    </div>
  </div>
</body>
</html>